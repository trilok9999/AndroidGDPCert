<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:spinnerMode="dropdown"
                android:name="Select"
                android:entries="@array/arrays"
                android:prompt="@string/prompt"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/remains"
                android:layout_marginTop="5dp"
                android:hint="Enter the number of remains"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_marginTop="5dp"
                android:hint="Type message"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Select Hazard Type"
                android:id="@+id/textView2"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp" />
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:id="@+id/radiogroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water"
                android:id="@+id/water"
                android:layout_marginLeft="150dp"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire"
                android:id="@+id/fire"
                android:layout_marginLeft="150dp"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity"
                android:id="@+id/electricity"
                android:layout_marginLeft="150dp"
                android:checked="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Natural"
                android:id="@+id/neutral"
                android:layout_marginLeft="150dp"
                android:checked="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collapsed Building"
                android:id="@+id/others"
                android:layout_marginLeft="150dp"
                android:checked="false"
                />
</RadioGroup>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Location"
                android:id="@+id/choose"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:layout_marginLeft="0dp"
                android:onClick="checked" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/latitude"
                android:layout_marginLeft="0dp"
                android:hint="Latitude" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/longitude"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginTop="-43dp"
                android:hint="Longitude" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/convertlocation"
                android:layout_marginTop="20dp"
                android:hint="Enter your Location here"
                android:layout_marginLeft="0dp" />

            <Button
                android:id="@+id/btnSelectPhoto"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="Select Photo"
                android:onClick="selectImage"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/download" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submit"
                android:layout_gravity="center_horizontal"
                android:onClick="Submit" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
