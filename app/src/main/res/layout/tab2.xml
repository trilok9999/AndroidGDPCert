<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="440dp"
        android:id="@+id/cv"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="#c9c9c3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="               You are currently assigned to"
            android:background="#76c945"
            android:id="@+id/Heading"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name:"
            android:id="@+id/Name"
            android:layout_marginTop="71dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="166dp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColorHighlight="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date Created:"
            android:id="@+id/Date"
            android:layout_marginTop="150dp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_alignBottom="@+id/cv"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/DateCreated"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="260dp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_alignBottom="@+id/cv"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location:"
            android:id="@+id/LocationField"
            android:layout_marginTop="240dp"
            android:layout_alignBottom="@+id/cv"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/Location"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="240dp"
            android:layout_alignBottom="@+id/cv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="64dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textIsSelectable="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type:"
            android:id="@+id/textView13"
            android:layout_alignBottom="@+id/cv"
            android:layout_marginTop="320dp"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="40dp"
            android:singleLine="false"
            android:linksClickable="false"
            android:focusable="false"
            android:contextClickable="false"
            android:clickable="false"
            android:elegantTextHeight="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="330dp"
            android:id="@+id/TeamName"
            android:layout_alignBottom="@+id/cv"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textSize="30dp" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable to view your Team Details"
            android:id="@+id/addView"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="390dp"

            android:layout_alignBottom="@+id/cv"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="25dp" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_below="@+id/cv"
        android:id="@+id/addlayout"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="440dp"
            android:id="@+id/cv2"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#c9c9c3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="                        Team Details"
                android:background="#76c945"
                android:id="@+id/Heading2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/Name1"
                android:layout_marginTop="71dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="40dp"
                android:linksClickable="true"
                android:clickable="false"
                android:onClick="GetDetails" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memName1"
                android:layout_marginTop="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="300dp"
                android:textStyle="bold"
                android:textSize="40dp"
                android:textColorHighlight="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/Name2"
                android:layout_marginTop="150dp"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_alignBottom="@+id/cv"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/memName2"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="260dp"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_alignBottom="@+id/cv"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/Name3"
                android:layout_marginTop="240dp"
                android:layout_alignBottom="@+id/cv"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/memName3"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="240dp"
                android:layout_alignBottom="@+id/cv"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="83dp"
                android:layout_marginBottom="64dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textIsSelectable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/Name4"
                android:layout_alignBottom="@+id/cv"
                android:layout_marginTop="320dp"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:layout_marginLeft="260dp"
                android:layout_marginTop="320dp"
                android:id="@+id/memName4"
                android:layout_alignBottom="@+id/cv"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textSize="30dp" />
        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>
    </ScrollView>